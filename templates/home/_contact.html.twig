{% block stylesheet %}
	<link href="https://ik.imagekit.io/luno/sb-admin_rzjQZu3Rw.css" rel="stylesheet">
{% endblock %}

<div class="container border rounded mb-4">
	<form action="{{ path('user.contacterService') }}" method="post">
		<legend class="text-center">CONTACTEZ-NOUS</legend>
        <div class="row">
            <div class="form-group col-lg-6">
                <div class="form-label-group">
                    <input name="Email" type="email" id="inputEmail" class="form-control" 
                    placeholder="Entrez votre adresse de courriel" required="">
                    <label for="inputEmail">Entrez votre adresse de courriel</label>
                </div>
            </div>
            <div class="form-group col-lg-6">
                <div class="form-label-group">
                    <input name="Telephone" type="text" id="inputTelephone" class="form-control" pattern="[0-9]{2}[0-9]{3}[0-9]{2}[0-9]{2}"
                     placeholder="Entrez votre numéro de téléphone" required="">
                    <label for="inputTelephone">Entrez votre numéro de téléphone</label>
                </div>
            </div>
        </div>
        <div class="form-group green-border-focus">
            <label for="exampleFormControlTextarea5"></label>
            <textarea name="Message" class="form-control" id="exampleFormControlTextarea5" rows="5" 
            placeholder="Saisissez votre message" required=""></textarea>
		</div>
        <input class="btn btn-success btn-block mb-2" type="submit" value="ENVOYER">
   </form>
</div>