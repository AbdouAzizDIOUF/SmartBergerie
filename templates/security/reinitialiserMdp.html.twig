{% extends 'securityBase.html.twig' %}

{% block title %}Réinitialiser Mot de passe{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">
        <div class="card card-login mx-auto mt-5 mb-5">
            <div class="card-header">RÉCUPERATION DE MOT DE PASSE</div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    <div class="form-label-group">
                        {{ form_row(form.Password) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        {{ form_row(form.confirm_password) }}
                    </div>
                </div>
                <input class="btn btn-success btn-block" type="submit" value="RÉINITIALISATION DE VOTRE MOT DE PASSE">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}